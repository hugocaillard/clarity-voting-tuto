{
  "deno.enable": true,
  "deno.lint": true,
  "deno.unstable": false,
  "eslint.enable": false,

  "prettier.semi": false,
  "prettier.singleQuote": true,
  "prettier.trailingComma": "all",

  "[clarity]": {
    "editor.rulers": [80],

    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true
  }
}
